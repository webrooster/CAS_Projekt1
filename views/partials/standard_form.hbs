<!-- FORM CONTAINER -->
<form class="note__form" id="note__form" action="" method="POST">
    <h3>{{ form_title }}</h3>
    <h4>{{ form_description }}</h4>
    <fieldset>
        <label for="title">Title <span>Required</span></label>
        <input id="title" 
            placeholder="Add a note"
            type="text"
            name="title"
            tabindex="1"
            maxlength="100"
            required autofocus>
    </fieldset>

    <fieldset>
        <label for="description">Description</label>
        <textarea id="description" placeholder="Type your message here...." name="description" tabindex="2"
            maxlength="500" required></textarea>
    </fieldset>

    <fieldset>
        <label for="expire">Expire <span>Required</span></label>
        <input id="expire" placeholder="dd-mm-yyyy" type="date" name="expire" tabindex="3" required>
    </fieldset>

    <fieldset>
        <label for="importance">Importance <span>Required</span></label>
        <select id="importance" name="importance" tabindex="4">
            <option selected="selected">Choose importance</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </fieldset>

    <fieldset>
        <div class="form__buttons">
            <button id="form__clear" name="clear" type="reset">
                Cancel
            </button>
            <button id="form__submit" name="submit" type="submit">
                Add new note
            </button>
        </div>
    </fieldset>

    <p class="copyright">CAS-FEE-2020 - Project 1</p>
</form>
<!-- END FORM CONTAINER -->