<!-- START LIST ITEMS -->
{{#if notes}}
{{#each notes}}
<li id="{{@index}}" class="note" data-index="{{ @index }}" data-id="{{ id }}">
    <div class="note__container">
        <div class="note__number {{#if complete}}note--completed{{/if}}">
            {{#if complete}}<i class="fas fa-check"></i>{{/if}}</div>
        <div class="note__importance note--importance-{{ importance}}">{{ importance}}</div>
        <div class="note__title">
            <h2>{{ title }} {{message}}</h2>
        </div>
        <div class="note__expire">
            <p>{{ expire }}</p>
            <span>Expire on</span>
        </div>
        <div class="note__dropdown">
            <button id="d-{{ id }}" class="btn--open"><i class="fa fa-arrow-down"></i></button>
        </div>
    </div>
    <div id="open-{{@index }}" class="note__content">
        <div class="note__dates">
            <div class="note__created"><span>Created on:</span>
                <p>{{ created }}</p>
            </div>
            <div class="note__completed"><span>Date Completed:</span>
                <p>{{#if complete}}{{ completed_at }}{{ else }}Not completed{{/if}}</p>
            </div>
        </div>
        <div class="note__description">
            <p>{{#if description}}{{ description }}{{else}}This note has no description{{/if}}</p>
        </div>
        <div class="note__buttons">
            <button class="btn--edit">Edit</button>
            <button class="btn--complete">{{#if complete}}Note is
                completed{{else}}Complete{{/if}}</button>
            <button class="btn--delete"><i class="far fa-trash-alt"></i> Delete</button>
        </div>
    </div>
</li>
{{/each}}
{{else}}
<li id="{{@index}}" class="note" data-index="{{ @index }}">
    <div class="note__container">
        <div class="note__number"><i class="fas fa-info"></i></div>
        <div class="note__importance note--importance-1"><i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="note__title">
            <h2 class="note__title">{{ message }}</h2>
        </div>
    </div>
</li>
{{/if}}
<!-- END LIST ITEMS -->